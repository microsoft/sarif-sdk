@ECHO OFF
SET BsoaEnlistment=C:\Code\bion\csharp\BSOA

PUSHD "%~dp0"

ECHO Installing BSOA Tools
ECHO =====================
dotnet tool install BSOA.Generator --version "0.7.0" --tool-path bin
dotnet tool install BSOA.FromJSchema --version "0.7.0" --tool-path bin

ECHO.
