{
  "$schema": "https://schemastore.azurewebsites.net/schemas/json/sarif-2.1.0-rtm.5.json",
  "version": "2.1.0",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "SARIF Functional Testing",
          "rules": [
            {
              "id": "SARIF1019",
              "name": "DirectoryUriMustEndWithSlash",
              "shortDescription": {
                "text": "The SARIF specification requires every URI in originalUriBaseIds to end with a slash."
              },
              "fullDescription": {
                "text": "The SARIF specification requires every URI in originalUriBaseIds to end with a slash. When a URI that does not end with a slash (for example, \"file:///C:/code/src\") is combined with a relative path (for example, \"io/kb.c\"), the trailing component (\"src\") will be interpreted as a file name and removed, producing \"file:///C:/code/io/kb\", which is incorrect. Adding the trailing slash ensures that the combined URI will be \"file:///C:/code/src/io/kb.c\", as expected."
              },
              "messageStrings": {
                "Default": {
                  "text": "{0}: The URI '{1}' associated with the originalUriBaseId symbol '{2}' does not end with a slash."
                }
              },
              "helpUri": "http://docs.oasis-open.org/sarif/sarif/v2.1.0/sarif-v2.1.0.html"
            }
          ]
        }
      },
      "invocations": [
        {
          "executionSuccessful": true
        }
      ],
      "artifacts": [
        {
          "location": {
            "uri": "FunctionalTestOutput.ValidateCommand/Inputs.SARIF1019.DirectoryUriSlash_Invalid.sarif",
            "uriBaseId": "TEST_DIR"
          }
        }
      ],
      "results": [
        {
          "ruleId": "SARIF1019",
          "ruleIndex": 0,
          "level": "error",
          "message": {
            "id": "Default",
            "arguments": [
              "runs[0].originalUriBaseIds.PROJECT_ROOT",
              "file:///C:/code/src",
              "PROJECT_ROOT"
            ]
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "index": 0
                },
                "region": {
                  "startLine": 12,
                  "startColumn": 25
                }
              }
            }
          ]
        }
      ],
      "columnKind": "utf16CodeUnits"
    }
  ]
}